<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".ui.activities.LoginActivity">

    <TextView
        android:id="@+id/tvLogInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log inðŸ‘‹"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/accent1"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSignUpSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to continue"
        android:textSize="16sp"
        android:textColor="#707070"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_sans_medium"
        app:layout_constraintTop_toBottomOf="@id/tvLogInTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <!-- Email address input -->
    <EditText
        android:id="@+id/etEmailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email address"
        android:padding="16dp"
        android:background="@drawable/editfield_bg"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_sans_regular"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Password input -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="16dp"
        android:background="@drawable/editfield_bg"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:drawableEnd="@drawable/ic_android_eye"
        android:drawableTint="#808080"
        android:fontFamily="@font/nunito_sans_regular"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/etEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Sign Up Button -->
    <TextView
        android:id="@+id/btnSignIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:background="@drawable/primary_button"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_sans_medium"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Already have an account? Sign in -->
    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User? Sign Up"
        android:textSize="14sp"
        android:textColor="#707070"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/btnSignIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
