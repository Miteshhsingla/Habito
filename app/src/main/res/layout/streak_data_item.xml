<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="16dp"
    android:background="@drawable/editfield_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_medium"
        android:textAlignment="center"
        android:text="Jogging"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/streak_icon_monday"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/streak" /> <!-- Replace with your streak icon -->

            <TextView
                android:id="@+id/day_initial_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Repeat for T, W, T, F, S, S -->
        <!-- Tuesday -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/streak_icon_tuesday"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/streak" />

            <TextView
                android:id="@+id/day_initial_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Wednesday -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/streak_icon_wednesday"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.5"
                android:src="@drawable/streak" />

            <TextView
                android:id="@+id/day_initial_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Thursday -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/streak_icon_thursday"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/streak" />

            <TextView
                android:id="@+id/day_initial_th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Friday -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/streak_icon_friday"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/streak" />

            <TextView
                android:id="@+id/day_initial_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Saturday -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/streak_icon_saturday"
                android:layout_width="40dp"
                android:alpha="0.5"
                android:layout_height="40dp"
                android:src="@drawable/streak" />

            <TextView
                android:id="@+id/day_initial_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Sunday -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/streak_icon_sunday"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/streak" />

            <TextView
                android:id="@+id/day_initial_su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
