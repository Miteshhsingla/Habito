<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.activities.SignUpActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/black"
            android:background="#fafafa" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Sign Up Title -->
    <TextView
        android:id="@+id/tvSignUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign UpðŸ‘‹"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/accent1"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSignUpSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email below to create your account"
        android:textSize="16sp"
        android:textColor="#707070"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_sans_medium"
        android:layout_marginStart="16dp" />

    <!-- Email address input -->
    <EditText
        android:id="@+id/etEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email address"
        android:padding="16dp"
        android:background="@drawable/editfield_bg"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_sans_regular"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:padding="16dp"
        android:background="@drawable/editfield_bg"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_sans_regular"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Password input -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="16dp"
        android:background="@drawable/editfield_bg"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:drawableEnd="@drawable/ic_android_eye"
        android:drawableTint="#808080"
        android:fontFamily="@font/nunito_sans_regular"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Sign Up Button -->
    <TextView
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:background="@drawable/primary_button"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_sans_medium" />

    <!-- Already have an account? Sign in -->
    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign In"
        android:textSize="14sp"
        android:textColor="#707070"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_sans_regular"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
